# ============================================
# Port Configuration
# ============================================
PORT_CLIENT_ID=your_port_client_id_here
PORT_CLIENT_SECRET=your_port_client_secret_here

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1
# Optional: If not using IAM roles
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# ============================================
# Webhook Server
# ============================================
WEBHOOK_PORT=3000
WEBHOOK_PATH=/webhook

# ============================================
# Webhook Security
# ============================================
# IMPORTANT: Set this to your PORT_CLIENT_SECRET
# Port signs webhook requests using your client secret
WEBHOOK_SECRET=your_port_client_secret_here

# Comma-separated list of allowed IP addresses (optional)
# ALLOWED_IPS=52.1.2.3,52.4.5.6

# Maximum age of requests in seconds (prevents replay attacks)
MAX_REQUEST_AGE=300

# Rate limiting
ENABLE_RATE_LIMIT=true
MAX_REQUESTS_PER_MINUTE=100

# ============================================
# Logging
# ============================================
LOG_LEVEL=info

# ===========================================
# Entity Creation
# ===========================================
PORT_CREATE_ENTITY=true
PORT_BLUEPRINT_ID=blueprintId

